{
  "name": "create-libp2p-app",
  "author": "Chad Nehemiah <chad.nehemiah94@gmail.com>",
  "version": "1.0.2",
  "type": "module",
  "description": "A simple tool to scaffold libp2p dApps",
  "bin": {
    "create-libp2p-app": "create-libp2p-app.js"
  },
  "scripts": {
    "build": "esbuild src/bin.ts --outdir=dist --platform=node --format=esm",
    "start": "tsx src/bin.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maschad/create-libp2p-app.git"
  },
  "bugs": {
    "url": "https://github.com/maschad/create-libp2p-app/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/bin.js",
      "require": "./dist/bin.cjs"
    }
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.7.4",
    "@types/prompts": "^2.4.9",
    "esbuild": "0.24.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "libp2p": "^2.2.1",
    "commander": "^12.1.0",
    "ora": "^8.1.1",
    "prompts": "^2.4.2"
  }
}
